{
  "compilerOptions": {
    "target": "ES2016", // Specify ECMAScript target version
    "module": "Node16", // Specify module code generation
    "moduleResolution": "node16", // Specify module resolution strategy
    "outDir": "./dist", // Redirect output structure to the directory
    "rootDir": "./src", // Specify the root directory of input files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "declaration": true // Generates corresponding '.d.ts' file.
  },
  "include": ["src/**/*"], // Specifies the files to be included in compilation
  "exclude": ["node_modules", "**/*.spec.ts"] // Specifies the files to be excluded from compilation
}
